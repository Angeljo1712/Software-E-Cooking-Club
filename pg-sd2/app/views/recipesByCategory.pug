extends layouts/layout

block styles
  link(rel="stylesheet", href="/css/hero.css")

block content
  h2= categoryName

  .grouped-recipes
    if recipes.length
      each recipe in recipes
        .recipe-card
          img(src=recipe.image_url, alt=recipe.title, width="250")
          h3= recipe.title
          a(href=`/recipes/${recipe.recipe_id}`) View Recipe
    else
      p No recipes found in this category.

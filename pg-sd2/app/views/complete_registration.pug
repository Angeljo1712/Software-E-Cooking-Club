extends layouts/layoutMinimal

block styles
  link(rel="stylesheet", href="/css/complete-registration.css")

block content

  a.logo(href="/") !{`Cooking <span style="color:#f56300">Club</span>`}
  .complete-container
    .complete-box
     

      h1 Complete Your Registration

      form(action="/complete-registration", method="POST")
        input(type="text", name="username", placeholder="Username", required)
        input(type="text", name="first_name", placeholder="First Name", required)
        input(type="text", name="last_name", placeholder="Last Name", required)
        input(type="text", name="phone", placeholder="Phone", required)
        input(type="password", name="password", placeholder="Password", required)
        input(type="text", name="country", placeholder="Country", required)
        button(type="submit") Register

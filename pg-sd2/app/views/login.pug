extends layouts/layoutMinimal

block styles
  link(rel="stylesheet", href="/css/login.css")

block content
  .login-container
    .login-left
      a.logo(href="/") !{`Cooking <span style="color:#f56300">Club</span>`}


      h2 Log in


      if showError && error
        .login-error= error

      button.btn-social.btn-email(type="button", onclick="toggleEmailLogin()")
        i.fas.fa-envelope
        | Log in with Email

      form#email-login-form(action="/login", method="POST", style="display: none; margin-top: 20px;")
        input(type="text", name="identifier", placeholder="Email or Username", required)
        input(type="password", name="password", placeholder="Password", required)
        button(type="submit") Log in


      button.btn-social.btn-facebook
        i.fab.fa-facebook
        | Log in with Facebook

      button.btn-social.btn-google
        i.fab.fa-google
        | Log in with Google

      p
        | Donâ€™t have an account?
        a(href="/register") Join now

    .login-right
      img(src="/images/login-right.jpg", alt="Delicious food")

block scripts
  script.
    function toggleEmailLogin() {
      const form = document.getElementById('email-login-form');
      form.style.display = form.style.display === 'none' ? 'block' : 'none';

      // Ocultar mensajes de error si existen
      const errorBox = document.querySelector('.login-error');
      const tryAgainMsg = document.querySelector('.try-again-message');

      if (errorBox) errorBox.style.display = 'none';
      if (tryAgainMsg) tryAgainMsg.style.display = 'none';
    }




extends layouts/layout  

block styles
  link(rel="stylesheet", href="/css/hero.css")

block content
  .hero-banner
    .hero-text
      h1 Welcome to Cooking Club
      h2 Recipes for all Occasions
      
      p Discover, Share, and Enjoy Recipes from Around the World

      h2 Latest Recipes

  .grid-recipes
    if latestRecipes.length
      each recipe in latestRecipes
        .recipe-card
          a(href=`/recipes/${recipe.recipe_id}`)
            img.recipe-img(src=recipe.image_url, alt=recipe.title)
            p.recipe-title= recipe.title
    else
      p No recipes found.
extends layouts/layout

block content
  h1 👨‍🍳 User List

  table(border="1")
    thead
      tr
        th ID
        th Username
        th First Name
        th Last Name
        th Email
        th Role

    tbody
      each user in users
        tr
          td= user.user_id
          // 🔹 Make username a clickable link to user details page by username
          td: a(href=`/users/${user.username}`)= user.username
          td= user.first_name
          td= user.last_name
          td= user.email
          td= user.role
